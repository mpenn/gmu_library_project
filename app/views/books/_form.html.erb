<%= form_for(@book) do |f| %>
<%= render 'shared/validation_errors', object: @book %>
<%= f.label :isbn %> <%= f.text_field :isbn, autofocus: true %><br />
<%= f.label :title %> <%= f.text_field :title %><br />
<%= f.label :author_id %> <%= f.collection_select :author_id, Author.all, :id, :name %><br />
<%= f.label :genre %> <%= f.text_field :genre %><br />
<%= f.label :abstract %> <%= f.text_field :abstract %><br />
<%= f.label :pages %> <%= f.text_field :pages %><br />
<%= f.label :image_cover_url %> <%= f.text_field :image_cover_url %><br />
<%= f.label :published_on %> <%= f.date_select :published_on %><br />
<%= f.label :total_in_library %> <%= f.text_field :total_in_library %><br />
<%= f.label :created_at %> <%= f.text_field :created_at %><br />
<%= f.label :updated_at %> <%= f.text_field :updated_at %><br />
<p>
<%= f.submit %>
<%= link_to 'Cancel', books_path %>
</p>
<% end %>